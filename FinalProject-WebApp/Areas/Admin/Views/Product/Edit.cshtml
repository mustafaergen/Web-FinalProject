@model FinalProject_Entities.DTOs.ProductCreateDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<h4>ProductEditDTO</h4>
<hr />
<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="ImageUrl" />
                <div class="form-group">
                    <label asp-for="CategoryId">Choose Category</label>
                    <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label><br />
                    <img class="img-fluid m-2 border-1 shadow" width="60" height="60" src="~/images/@Model.ImageUrl" />
                    <input type="file" name="file" class="form-control"/>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ShowCase" /> @Html.DisplayNameFor(model => model.ShowCase)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-warning" />
                </div>
            </div>
            <div class="col-md-8">
                <label asp-for="Summary" class="control-label"></label>
                <textarea id="summernote" asp-for="Summary">
            </textarea>
            </div>
        </div>
    </form>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section NewCss {
        <!-- Theme style -->
        <link rel="stylesheet" href="https://adminlte.io/themes/v3/dist/css/adminlte.min.css?v=3.2.0">
        <!-- summernote -->
        <link rel="stylesheet" href="https://adminlte.io/themes/v3/plugins/summernote/summernote-bs4.min.css">
    }
    @section Scripts {
        <!-- AdminLTE App -->
        <script src="https://adminlte.io/themes/v3/dist/js/adminlte.min.js?v=3.2.0"></script>
        <!-- Summernote -->
        <script src="https://adminlte.io/themes/v3/plugins/summernote/summernote-bs4.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="https://adminlte.io/themes/v3/dist/js/demo.js"></script>
        <!-- Page specific script -->
        <script>
            $(function () {
                // Summernote
                $('#summernote').summernote()

            })
        </script>
    }
